
if [ -e ~/Code/myzsh ]; then
    source ~/Code/myzsh/vendor/scmbreeze/scm_breeze.sh
    git_keyboard_shortcuts_enabled="true"
fi

set -o vi

alias c=clear

bindkey -v
bindkey '\e[3~' delete-char
bindkey '^R' history-incremental-search-backward

export EDITOR=vim

setopt INTERACTIVE_COMMENTS

PATH=$HOME/bin:$PATH

S_TAB_TITLE=""

function tab {
    S_TAB_TITLE=$1
}

function vcs_prompt_char {
    git branch 1>/dev/null 2>/dev/null && echo '±' && return
    svn info 1>/dev/null 2>/dev/null && echo '☿' && return
    echo '○'
}

preexec () {
    print -Pn "\e]0;$1\a" 
}

precmd () {
    print -Pn "\e]0;$S_TAB_TITLE\a" 
}

PROMPT="$(vcs_prompt_char) %c> "

